@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato";
}

<div class="text-center">
    <h3>Apagar contato</h3>
    <p>Você realmente deseja apagar o contato "@Model.Nome"?</p>
</div>

<div class="text-center">
    <div class="btn-group" role="group">
        <a role="button" class="btn btn-outline-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Apagar</a>
        <a role="button" class="btn btn-outline-dark" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</div>